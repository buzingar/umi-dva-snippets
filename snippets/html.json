  "jscanvasdemo": {
    "prefix": "gn-demo-canvas-solar",
    "body": [
      "<!DOCTYPE html>",
      "<html>",
      "<head>",
      "<meta charset=\"utf-8\">",
      "<title>solar</title>",
      "<style>",
      "body {",
      "padding: 0;",
      "margin: 0;",
      "background-color: rgba(0, 0, 0, 0.1)",
      "}",

      "canvas {",
      "display: block;",
      "margin: 200px auto;",
      "}",
      "</style>",
      "</head>",
      "<body>",
      "<canvas id=\"solar\" width=\"300\" height=\"300\"></canvas>",
      "<script>",
      "let sun;",
      "let earth;",
      "let moon;",
      "let ctx;",
      "function init(){",
      "\tsun = new Image();",
      "\tearth = new Image();",
      "\tmoon = new Image();",
      "\tsun.src = \"./sun.jpg\";",
      "\tearth.src = \"./earth.jpg\";",
      "\tmoon.src = \"./moon.jpg\";",
      "",
      "\tlet canvas = document.querySelector(\"#solar\");",
      "\tctx = canvas.getContext(\"2d\");",
      "",
      "\tsun.onload = function (){",
      "\t\tdraw()",
      "\t}",
      "}",
      "init();",
      "function draw(){",
      "\tctx.clearRect(0, 0, 300, 300); //清空所有的内容",
      "\t/*绘制 太阳*/",
      "\tctx.drawImage(sun, 0, 0, 300, 300);",

      "\tctx.save();",
      "\tctx.translate(150, 150);",

      "\t//绘制earth轨道",
      "\tctx.beginPath();",
      "\tctx.strokeStyle = \"rgba(255,255,0,0.5)\";",
      "\tctx.arc(0, 0, 100, 0, 2 * Math.PI)",
      "\tctx.stroke()",

      "\tlet time = new Date();",
      "\t//绘制地球",
      "\tctx.rotate(2 * Math.PI / 60 * time.getSeconds() + 2 * Math.PI / 60000 * time.getMilliseconds())",
      "\tctx.translate(100, 0);",
      "\tctx.drawImage(earth, -12, -12)",

      "\t//绘制月球轨道",
      "\tctx.beginPath();",
      "\tctx.strokeStyle = \"rgba(255,255,255,.3)\";",
      "\tctx.arc(0, 0, 40, 0, 2 * Math.PI);",
      "\tctx.stroke();",

      "\t//绘制月球",
      "\tctx.rotate(2 * Math.PI / 6 * time.getSeconds() + 2 * Math.PI / 6000 * time.getMilliseconds());",
      "\tctx.translate(40, 0);",
      "\tctx.drawImage(moon, -3.5, -3.5);",
      "\tctx.restore();",

      "\trequestAnimationFrame(draw);",
      "}",
      "</script>",
      "</body>",
      "</html>"
    ],
    "description": "sun earth moon system"
  },
  "canvasclock": {
    "prefix": "gn-demo-canvas-clock",
    "body": [
      "<!DOCTYPE html>",
      "<html>",
      "<head>",
      "<meta charset=\"utf-8\">",
      "<title>clock</title>",
      "<style>",
      "\tbody {",
      "\t\tpadding: 0;",
      "\t\tmargin: 0;",
      "\t\tbackground-color: rgba(0, 0, 0, 0.1)",
      "\t}",

      "\tcanvas {",
      "\t\tdisplay: block;",
      "\t\tmargin: 200px auto;",
      "\t}",
      "</style>",
      "</head>",
      "<body>",
      "\t<canvas id=\"solar\" width=\"300\" height=\"300\"></canvas>",
      "\t<script>",
      "\tinit();",
      "",
      "\tfunction init(){",
      "\t\tlet canvas = document.querySelector(\"#solar\");",
      "\t\tlet ctx = canvas.getContext(\"2d\");",
      "\t\tdraw(ctx);",
      "\t}",
      "",
      "function draw(ctx){",
      "\trequestAnimationFrame(function step(){",
      "\t\tdrawDial(ctx); //绘制表盘",
      "\t\tdrawAllHands(ctx); //绘制时分秒针",
      "\t\trequestAnimationFrame(step);",
      "\t});",
      "}",
      "/*绘制时分秒针*/",
      "function drawAllHands(ctx){",
      "\tlet time = new Date();",
      "",
      "\tlet s = time.getSeconds();",
      "\tlet m = time.getMinutes();",
      "\tlet h = time.getHours();",
      "",
      "\tlet pi = Math.PI;",
      "\tlet secondAngle = pi / 180 * 6 * s;  //计算出来s针的弧度",
      "\tlet minuteAngle = pi / 180 * 6 * m + secondAngle / 60;  //计算出来分针的弧度",
      "\tlet hourAngle = pi / 180 * 30 * h + minuteAngle / 12;  //计算出来时针的弧度",
      "",
      "\tdrawHand(hourAngle, 60, 6, \"red\", ctx);  //绘制时针",
      "\tdrawHand(minuteAngle, 106, 4, \"green\", ctx);  //绘制分针",
      "\tdrawHand(secondAngle, 129, 2, \"blue\", ctx);  //绘制秒针",
      "}",
      "/*绘制时针、或分针、或秒针",
      " * 参数1：要绘制的针的角度",
      " * 参数2：要绘制的针的长度",
      " * 参数3：要绘制的针的宽度",
      " * 参数4：要绘制的针的颜色",
      " * 参数4：ctx",
      " * */",
      "function drawHand(angle, len, width, color, ctx){",
      "\tctx.save();",
      "\tctx.translate(150, 150); //把坐标轴的远点平移到原来的中心",
      "\tctx.rotate(-Math.PI / 2 + angle);  //旋转坐标轴。 x轴就是针的角度",
      "\tctx.beginPath();",
      "\tctx.moveTo(-4, 0);",
      "\tctx.lineTo(len, 0);  // 沿着x轴绘制针",
      "\tctx.lineWidth = width;",
      "\tctx.strokeStyle = color;",
      "\tctx.lineCap = \"round\";",
      "\tctx.stroke();",
      "\tctx.closePath();",
      "\tctx.restore();",
      "}",
      "",
      "/*绘制表盘*/",
      "function drawDial(ctx){",
      "\tlet pi = Math.PI;",
      "",
      "\tctx.clearRect(0, 0, 300, 300); //清除所有内容",
      "\tctx.save();",
      "",
      "\tctx.translate(150, 150); //一定坐标原点到原来的中心",
      "\tctx.beginPath();",
      "\tctx.arc(0, 0, 148, 0, 2 * pi); //绘制圆周",
      "\tctx.stroke();",
      "\tctx.closePath();",
      "",
      "\tfor (let i = 0; i < 60; i++){//绘制刻度。",
      "\t\tctx.save();",
      "\t\tctx.rotate(-pi / 2 + i * pi / 30);  //旋转坐标轴。坐标轴x的正方形从 向上开始算起",
      "\t\tctx.beginPath();",
      "\t\tctx.moveTo(110, 0);",
      "\t\tctx.lineTo(140, 0);",
      "\t\tctx.lineWidth = i % 5 ? 2 : 4;",
      "\t\tctx.strokeStyle = i % 5 ? \"blue\" : \"red\";",
      "\t\tctx.stroke();",
      "\t\tctx.closePath();",
      "\t\tctx.restore();",
      "\t}",
      "\tctx.restore();",
      "}",
      "</script>",
      "</body>",
      "</html>"
    ],
    "description": ""
  }
}
